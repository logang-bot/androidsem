<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guifinalprojecto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GUIfinalProjecto"
        android:usesCleartextTraffic="true">

        <activity android:name=".editUser"></activity>

        <activity android:name=".createMyRest"></activity>
        <activity android:name=".editMyRest" />

        <activity android:name=".dataMyRest" />
        <activity android:name=".listMyRests" />
        <activity android:name=".listMenus" />
        <activity
            android:name=".displayProfile"
            android:label="@string/title_activity_display_profile"
            android:theme="@style/Theme.GUIfinalProjecto.NoActionBar" />
        <activity
            android:name=".register"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.GUIfinalProjecto.NoActionBar" />
        <activity
            android:name=".MainDashboard"
            android:label="@string/title_activity_main_dashboard"
            android:theme="@style/Theme.GUIfinalProjecto.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>